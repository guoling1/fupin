<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>民主评议</title>
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta http-equiv="Access-Control-Allow-Origin" content="*">
<link href="../css/index.css" rel="stylesheet" type="text/css">
<script type="text/javascript" src="../js/autoview.js"></script>
<style>
	body{ height: 100%; background: #fff;}
</style>
</head>

<body>
     <header class="pos_rela head_gg"><span style=" z-index:100; height:2.5rem; width:5rem;position:absolute; " tapmode="selected" onclick="fn_closeframe()"></span><a class="btnBack" style="border: 10px solid #f35957;border-right-color: #fff;width: 0;height: 0;"></a>民主评议</header>
     <div class="search">
          <form>
          <input class="ru_4" type="text" id="keyword" style="line-height: normal;height:3rem;" tapmode="selected" placeholder="搜索户主名称...">
          <button type="button" class="ru_5" tapmode="selected" onclick="fn_search()"></button>
        </form>
	</div>
   <p class="ru_1"><span style="float:left;">姓名 (身份证号)</span><span style="float:right;">时间</span></p>
   <div class="ru_2" id="list">
        
   </div>
   <div class="ru_2">
   <p class="ru_3">*请选择您要评议的人员</p>
   </div>
 </div> 
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    apiready = function(){
        api.execScript({
            name:'main',
            script:"keybackevent('pingyi_1_list');"
        });
        fn_pingyi_1_list();
    };
    function go_pingyi_1(id_){
    	api.openFrame({
            name: 'pingyi_1',
            url: 'pingyi_1.html',
            rect: {
                x: 0,
                y: $api.getStorage('statusbarH'),
                w: 'auto',
                h: $api.getStorage('frameHeight')
            },
            pageParam: {
                id: id_
            },
        });
    }
    function fn_pingyi_1_list(){
        api.ajax({
            url: $api.getStorage('appbase')+'/appbase/pingyi_1_list.php',
            dataType:'json',
            cache: true,
            data: {
				values: {
					method: 'list',
					keyword : $api.val($api.byId('keyword'))
				}
			}
        }, function(ret, err){
            if(ret){
            	if(ret.state == 'true'){
					$api.html($api.byId('list'), ret.list);
            	}
            }
        });
    }
    function fn_search(){
    	fn_pingyi_1_list();
    }
    function fn_closeframe() {
      api.execScript({
            name:'main',
            script:'pageArraySplice();'
        });
		  api.closeFrame();
    }
</script>
</html>